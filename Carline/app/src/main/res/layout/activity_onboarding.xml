<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".OnboardingActivity">

    <FrameLayout
        android:id="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Skip"
            android:textColor="@color/blue"
            android:textSize="@dimen/_18sdp" />

    </FrameLayout>



    <ImageView
        android:id="@+id/img"
        android:layout_above="@+id/btnget_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:scaleType="fitXY"
        android:src="@drawable/img_onboard1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_below="@+id/layer1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/find_the_best_car_without_headaches"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:breakStrategy="balanced"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="You Choose your car online. We inspect it and deliver it."
            android:textColor="@color/color_grey"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:breakStrategy="high_quality"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_above="@+id/btnget_start"
        android:background="@drawable/onboarding_gradient" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnget_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/blue"
        android:padding="@dimen/_10sdp"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:cornerRadius="@dimen/_10sdp" />

</RelativeLayout>